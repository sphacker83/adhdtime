{
  "permissions": {
    "allow": [
      "Edit:*",
      "Write:*",
      "MultiEdit:*",
      "NotebookEdit:*",
      "Bash:*"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "BeforeAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${GEMINI_PROJECT_DIR:-$PWD}/.gemini/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${GEMINI_PROJECT_DIR:-$PWD}/.gemini/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ],
    "AfterAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${GEMINI_PROJECT_DIR:-$PWD}/.gemini/hooks/error-handling-reminder.sh"
          }
        ]
      }
    ]
  }
}
